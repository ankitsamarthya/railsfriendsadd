<h1>Welcome#index</h1>
<div id="user_nav">
	<% if user_signed_in? %>
	Signed in as <%= current_user.email %>
	<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
	<% else %>
	<%= link_to "Sign up", new_user_registration_path %> or <%= link_to "Sign in", new_user_session_path %>
	<% end %>
</div>
<div>
	<% if flash[:notice]%>
	<%= flash[:notice] %>
	<%end%>
	<strong>Friend Requests</strong><br/>
	<%  @u=Friendship.all %>
	<% @u.each do |f1|%>
	<% if f1.status=="Waiting" && f1.friend_id == current_user.id%>
	<%= f1.user.email%>
	<%= link_to "Add", :controller=> "friendships", :action=> "add_friend", :id => f1.friend_id %>
	<%= link_to "Ignore", :controller=> "friendships", :action=> "reject_friend", :id => f1.friend_id%>
	<%end%>
	<%end%>
</div>

User list
<div id="users">
<% @fr =Friendship.find_by_status("Waiting")%>
	<%for user in @users %>
	<div class="user">
		<p>
		<% if user != current_user %>
			<strong><%= user.email%></strong>
			
			<% if @fr.present? && @fr.friend_id==user.id%>
			<% binding.pry%>
			<%= link_to "Request Sent" %>
			<%else%>
			<%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
			<%end%>
	<%end%>
		</p>
	</div>
	<%end%>

</div>

